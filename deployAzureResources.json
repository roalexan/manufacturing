{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "prefix": {
            "type": "String",
            "metadata": {
                "description": "Short string prepended to some resource names to make them unique."
            }
        },
        "location": {
            "defaultValue": "northeurope",
            "type": "String",
            "metadata": {
                "description": "Specifies the location of the deployment."
            }
        }
    },
    "variables": {
        "resourceGroupName": "[concat(parameters('prefix'), '-mc4m-rg')]",
        "identity": "MC4M_IDENTITY",
        "sqlAdministratorLogin": "admin1",
        "sqlAdministratorLoginPassword": "QfVuaD9EA3[8st>Y9rW!",
        "synapseWorkspaceName": "[concat(parameters('prefix'), '-synw')]",
        "sparkPoolName": "[concat(parameters('prefix'), 'synsp')]",
        "apacheSparkPoolName": "[concat(variables('synapseWorkspaceName'), '/', variables('sparkPoolName'))]",
        "storageAccountName": "[concat(parameters('prefix'), 'mc4mst')]",
        "storageAccountUrl": "[concat('https://', variables('storageAccountName'), '.dfs.core.windows.net')]",
        "synapseFileSystem": "synapsecontainer",
        "synapseManagedResourceGroupName": "[concat(parameters('prefix'), '-synapse-managed-rg')]",
        "roleAssignmentVersion": "2020-04-01-preview",
        "storageRoleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'ba92f5b4-2d11-453d-a403-e96b0029c9fe')]",
        //"storageRoleAssignDeployment": "[guid(variables('storageRoleDefinitionId'), resourceGroup().id)]",
        "storageRoleAssignDeployment": "[guid(variables('storageRoleDefinitionId'), variables('resourceGroupName'))]",
        "sleepResource": "[resourceId('Microsoft.Resources/deploymentScripts', 'sleep')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('location')]",
            "name": "[variables('resourceGroupName')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "resourcesDeployment",
            "resourceGroup": "[variables('resourceGroupName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('resourceGroupName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "metadata": {
                                "comments": "User-assigned managed identity used by DeploymentScript."
                            },
                            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
                            "name": "[variables('identity')]",
                            "apiVersion": "2018-11-30",
                            "location": "[parameters('location')]"
                        },
                        {
                            "dependsOn": [ "[variables('identity')]" ],
                            "type": "Microsoft.Resources/deploymentScripts",
                            "apiVersion": "2020-10-01",
                            "name": "sleep",
                            "location": "[parameters('location')]",
                            "kind": "AzurePowerShell",
                            "properties": {
                                "forceUpdateTag": "1",
                                "azPowerShellVersion": "3.0",
                                "scriptContent": "Start-Sleep -Seconds 20",
                                "timeout": "PT30M",
                                "cleanupPreference": "Always",
                                "retentionInterval": "P1D"
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "prefix": {
            "type": "string",
            "value": "[parameters('prefix')]"
        },
        "location": {
            "type": "string",
            "value": "[parameters('location')]"
        },
        "resourceGroupName": {
            "type": "string",
            "value": "[variables('resourceGroupName')]"
        },
        "sqlAdministratorLogin": {
            "type": "string",
            "value": "[variables('sqlAdministratorLogin')]"
        },
        "sqlAdministratorLoginPassword": {
            "type": "SecureString",
            "value": "[variables('sqlAdministratorLoginPassword')]"
        },
        "storageAccountName": {
            "type": "string",
            "value": "[variables('storageAccountName')]"
        },
        "synapseWorkspaceName": {
            "type": "string",
            "value": "[variables('synapseWorkspaceName')]"
        },
        "sparkPoolName": {
            "type": "string",
            "value": "[variables('sparkPoolName')]"
        }
    }
}